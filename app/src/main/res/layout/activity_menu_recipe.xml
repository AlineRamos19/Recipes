<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.android.aline.recipes.ui.menurecipes.MenuRecipeActivity">

    <include
        android:id="@+id/toolbar_details_recipe"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/frag_ingredient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@id/btn_show_steps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_details_recipe" />

    <TextView
        android:id="@+id/btn_show_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/size_textView"
        android:background="@color/colorPrimary"
        android:drawableEnd="@drawable/ic_next"
        android:drawableRight="@drawable/ic_next"
        android:padding="@dimen/padding_recycler"
        android:text="@string/btn_steps"
        android:textStyle="bold"
        android:textColor="@color/colorProgressWhite"
        android:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>
